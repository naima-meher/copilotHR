{
	"$schema": "https://developer.microsoft.com/en-us/json-schemas/teams/v1.17/MicrosoftTeams.schema.json",
	"version": "1.0.0",
	"manifestVersion": "1.17",
	"id": "${{TEAMS_APP_ID}}",
	"name": {
		"short": "CopilotHR",
		"full": ""
	},
	"developer": {
		"name": "ORSERS",
		"mpnId": "",
		"websiteUrl": "https://www.example.com",
		"privacyUrl": "https://www.example.com/privacy",
		"termsOfUseUrl": "https://www.example.com/termofuse"
	},
	"description": {
		"short": "Search and manage employee information",
		"full": "The Employee Directory app allows you to search and manage employee information stored in a cloud Oracle database."
	},
	"icons": {
		"outline": "outline.png",
		"color": "color.png"
	},
	"accentColor": "#FFFFFF",
	"validDomains": [],
	"bots": [
		{
			"botId": "${{BOT_ID}}",
			"scopes": [
				"personal",
				"team",
				"groupchat"
			],
			"supportsFiles": false,
			"isNotificationOnly": false
		}
	],
	"composeExtensions": [],
	"staticTabs": [],
	"configurableTabs": [],
	"permissions": [
		"identity",
		"messageTeamMembers"
	]
}